<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <main>
      <div class="d-flex flex-column justify-content-center banner-secondary">
        <div class="banner-overlay"></div>
        <div class="text-center banner-title">
          <h1 id="name_page"><%= objet.Nom %></h1>
        </div>
      </div>
      <div class="introduction-container p-5 flux">
        <p><%= objet.Description %>
        </p>
      </div>
      <div class="d-flex flex-column gap-4 p-5 list-habitats-container">
        <% animals.forEach(function(animal){ %>
          <%- include('../partials/card-list-animals', { objet: animal }); %>
        <% }); %>  
      </div> 
    </main>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/js/script.js" crossorigin="anonymous"> </script>
  </body>
</html>