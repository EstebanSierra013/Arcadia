<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <main>
      <div class="d-flex flex-column justify-content-center banner-secondary">
        <div class="banner-overlay"></div>
        <div class="text-center banner-title">
          <h1 id="name_page">Bienvenue, <%= user.Prenom + ' ' +user.Nom %></h1>
        </div>
      </div>
      <div class="d-flex justify-content-evenly profil-container p-4">
        <div class="d-inline">
          <img src= "/assets/img/user_icon.svg" alt="Image user">
        </div>
        <div class="d-flex flex-column justify-content-center">
          <h2><%= user.Prenom + ', ' +user.Nom%></h2>
          <h4><%= user.Role %></h4>
          <p><%= user.Username %></p>
        </div>
      </div>     
      <div class="d-flex flex-column p-4 gap-2 flux">
        <h3>Gestion</h3>
        <div class="d-flex non-wrap gap-2">
          <% paths.forEach(function(path){ %>
          <a href= "<%= user.en_rol %>/<%= path.toLowerCase() %>" class="btn btn-arcadia-p" id="<%= user.en_rol %>-<%=path%>-l"><%= path %></a> 
          <% }) %> 
        </div>   
      </div>
    </main>      
    <footer>
      <%- include('../partials/footer'); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/js/script.js" crossorigin="anonymous"> </script>
  </body>
</html>