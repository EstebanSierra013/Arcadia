<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <main>
      <div class="d-flex flex-column justify-content-center banner-secondary">
        <div class="banner-overlay"></div>
        <div class="text-center banner-title">
          <h1 id="name_page">Bienvenue, <%= user.Prenom + ' ' +user.Nom %></h1>
        </div>
      </div>
      <div class="d-flex justify-content-center gap-5 profil-container p-4">
        <div class="d-inline">
          <img src= "/assets/img/user_icon.svg" alt="Image user">
        </div>
        <div class="d-flex flex-column justify-content-center">
          <h2><%= user.Prenom + ', ' +user.Nom%></h2>
          <h4><%= user.Role %></h4>
          <p><%= user.Username %></p>
        </div>
      </div>     
      <div class="d-flex flex-column gap-3 align-items-xl-center flux">
        <h3 class="text-center">Gestion</h3>
        <div class="d-flex gap-2 p-2 justify-content-lg-center buttons-gestion-container">
          <% paths.forEach(function(path){ %>
          <a href= "<%= user.en_rol %>/<%= path.toLowerCase() %>" class="btn btn-arcadia-gestion" id="<%= user.en_rol %>-<%=path%>-l"><%= path %></a> 
          <% }) %> 
        </div>   
      </div>
      <div>        
      <% if(user.en_rol == "admin") {%>
        <div class="d-flex flex-column align-items-center p-5 gap-4 reviews-container-index text-center">
          <h3>Les Stars d'Arcadia</h3>
          <p>Découvrez les 3 animaux préférés de nos visiteurs</p>
          <div class="d-flex flex-column flex-md-row flex-md-wrap">
            <% rankAnimal.forEach(function(animal){ %>
              <%- include('../partials/card-list-top', { objet: animal, rankNumber: rankAnimal.indexOf(animal)+1 }); %>
            <% }); %>  
          </div>          
        </div>        
      <% } %> 
      </div>     
    </main>      
    <footer>
      <%- include('../partials/footer'); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/js/script.js" crossorigin="anonymous"> </script>
  </body>
</html>