

<% switch(details.en_name) {
  case 'animals' : %>
  <div class="form-floating mb-3">
    <input type="text" id="name" class="form-control" placeholder="name">
    <label for="name" class="form-label">Nom</label>    
  </div>
  <div class="form-floating mb-3">
    <input type="text" id="species" class="form-control" placeholder="race">
    <label for="species" class="form-label">Race</label>    
  </div>
  <div class="form-floating mb-3">
    <select class="form-select" id="habitat" aria-label="Default select example">
      <option selected></option>
      <% details.table.forEach(function(habitat){ %>      
      <option value="<%= habitat.Id %>"><%= habitat.Nom %></option>
      <% })%>
    </select>
    <label for="habitat">Habitat</label>
  </div>
  <div class="form-floating mb-3">
    <input class="form-control form-control-sm" id="image_path" type="file">
    <label for="image_path" class="form-label">Image</label>    
  </div>  
  <% break;
  case 'habitats' : %>
  <div class="form-floating mb-3">
    <input type="text" id="name" class="form-control" placeholder="Nom">
    <label for="name" class="form-label">Nom</label>    
  </div>
  <div class="form-floating mb-3">    
    <textarea type="text" id="description" class="form-control" rows="3" placeholder="Description"></textarea>
    <label for="description" class="form-label">Description</label>
  </div>
  <div class="form-floating mb-3">    
    <input class="form-control form-control-sm" id="image_path" type="file">
    <label for="image_path" class="form-label">Image</label>
  </div>
  <% break;
  case 'services' : %>
  <div class="form-floating mb-3">    
    <input type="text" id="name" class="form-control" placeholder="Nom" required>
    <label for="name" class="form-label">Nom</label>
  </div>
  <div class="form-floating mb-3">    
    <textarea type="text" id="description" class="form-control" rows="3" placeholder="Description" required></textarea>
    <label for="description" class="form-label">Description</label>
  </div>
  <div class="form-floating mb-3">    
    <input type="time" id="schedule" class="form-control" placeholder="00:00">
    <label for="schedule" class="form-label">Horaire</label>
  </div>
  <div class="form-floating mb-3">
    <input type="number" id="duration" class="form-control" placeholder="30">
    <label for="duration" class="form-label">Duration (minutes) </label>
  </div>
  <div class="form-floating mb-3">    
    <input id="image" class="form-control form-control-sm" type="file">
    <label for="image" class="form-label">Image</label>
  </div>
  <% break;
  case 'users' : %>
  <div class="form-floating mb-3">    
    <input id="Prenom"  type="text" name="name" class="form-control" placeholder="Prenom" required>
    <label for="Prenom" class="form-label">Prenom</label>
  </div>
  <div class="form-floating mb-3">    
    <input id="Nom" type="text" name="lastname" class="form-control value-form" placeholder="Nom" required>
    <label for="Nom" class="form-label">Nom</label>
  </div>
  <div class="form-floating mb-3">
    <input id="Username" type="text" name="username" class="form-control value-form " placeholder="name@example.com" required>
    <label for="Username" class="form-label">Email</label>      
  </div>  
  <div class="form-floating mb-3">
    <input id="password" type="password" name="password" class="form-control value-form" placeholder="password" required>
    <label for="password" class="form-label">Mot de passe</label>    
  </div>
  <div class="form-floating mb-3">
    <select id="Role" class="form-select" name="rol_id" required>
      <option selected ></option>
      <% details.table.forEach(function(rol){ %>      
      <option value="<%= rol.rol_id %>"><%= rol.rol_name %></option>
      <% })%>
    </select>
    <label for="Role">Role</label>
  </div>
  <% break;
}%>

