<div class="container fluid p-5 form-container justify-content-center">
  <form action="/contact" class="needs-validation" novalidate onsubmit="handleFormSubmit(event)">
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" name="mail" class="form-control">
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" class="form-control">
    </div>
    <div class="mb-3">
      <label for="message" class="form-label">Message</label>
      <textarea type="text" name="description" class="form-control" rows="3"></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-arcadia-p mt-5">Envoyer</button>
    </div>    
  </form>
</div>
  
   